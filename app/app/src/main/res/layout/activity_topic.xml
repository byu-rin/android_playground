<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TopicActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/maypage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:layout_marginRight="29dp"
            app:srcCompat="@drawable/mypage" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="김김김" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:text="환영합니다" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        >
        />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/like_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="89dp"
                android:layout_marginTop="30dp"
                android:duplicateParentState="true"
                app:srcCompat="@drawable/like_icon" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="23dp"
                android:layout_alignParentBottom="true"
                android:textSize="20dp"
                android:textStyle="normal"
                android:layout_marginLeft="57dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:text="like"

                >

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/New_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/new_icon" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="23dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="57dp"
                android:layout_marginBottom="10dp"
                android:text="NEW"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="normal">

            </TextView>

        </RelativeLayout>

    </LinearLayout>

    <!--로그인 회원가입 라인 -->
    <RelativeLayout
        android:id="@+id/protein"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="vertical">
        />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="프로틴 내돈내산 리얼후기" />


        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:text="조회수"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/text_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/text_1"
            android:text="댓글"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/text_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/text_1_1"
            android:text="추천"
            android:textSize="10dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/running"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="vertical">
        <TextView

            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="러닝 코스 best5" />
        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:text="조회수"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/text_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/text_2"
            android:text="댓글"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/text_2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/text_2_1"
            android:text="추천"
            android:textSize="10dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    </LinearLayout>

</LinearLayout>